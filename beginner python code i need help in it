largest = None
smallest = None
while True:
    num = input("Enter a number: ")
    if num == "done" : break
    try :
        number=float(num)
    except :
        print('Invalid input')
        continue
for number in [number] :
    if largest is None :
        largest=number
    elif largest <number :
        largest=number
print('Maximum is', largest)
for number in [number] :
    if smallest is None :
        smallest=number
    elif  smallest>number :
        smallest=number
print('Minimum is', smallest)
